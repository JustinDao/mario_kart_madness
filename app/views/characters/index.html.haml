%h1 Listing characters
%table
  %thead
    %tr
      %th Name
      %th
      %th
  %tbody
    - @characters.each do |character|
      %tr
        %td= character[get_field_index(Character, "cname")]
        %td= link_to 'Show', character_path(character[0])
        %td= link_to 'Edit', edit_character_path(character[0])
%br
  = link_to 'New Character', new_character_path
  |
  = link_to "Back", root_path