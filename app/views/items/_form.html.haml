= form_for(@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
  .fields
    = f.label :iname
    = f.text_field :iname
    %br
    = f.label :iinfo
    = f.text_area :iinfo
    %br
    = f.label :ipictureurl
    = f.text_field :ipictureurl
  .actions
    = f.submit