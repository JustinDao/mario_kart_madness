.header
  - if current_user == nil
    .login
      = link_to "Log In", login_path
    .signup
      = link_to "Sign Up", sign_up_path
  - else
    .username
      = current_user.username
    .logout
      = link_to "Log Out", logout_path, :method => :delete
  %a.logo{:href => root_path}
    %img{:src => "/logo.png"}
  %ul.menu
    %li= link_to "Home", root_path
    %li= link_to "Games", games_path
    %li= link_to "Characters", characters_path
    %li= link_to "Consoles", consoles_path
    %li= link_to "Items", items_path
    %li= link_to "Tracks", tracks_path
    %li= link_to "Bulletin", bulletin_path
  
